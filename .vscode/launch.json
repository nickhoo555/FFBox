{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "编译调试后端 (vite)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "node",
      "program": "${workspaceFolder}/src/backend/index.ts",
      "outFiles": [
        "${workspaceFolder}/app/backend/**/*.cjs"
      ],
      "preLaunchTask": "编译后端（dev）"
    },
    {
      "name": "编译调试后端 (webpack)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceFolder}/src/backend/index.ts",
      "outFiles": [
        "${workspaceFolder}/app/backend/**/*.js"
      ],
      "preLaunchTask": "启动 webpack:backend 脚本 (dev)"
    },
    {
      "name": "插入调试后端",
      "type": "node",
      "request": "attach",
      "port": 9229
    },
    {
      "name": "Docker Node.js Launch",
      "type": "docker",
      "request": "launch",
      "preLaunchTask": "docker-run: debug",
      "platform": "node"
    }
  ]
}
